@model FinalProject.ViewModels.Admin.RoomStatusVM

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<head>
    <link rel="stylesheet" href="~/css/new.css" />
</head>

<div class="col-lg-12 mt-4 mb-4" style="width: 100%;">
    <div class="iq-edit-list-data">
        <div class="tab-content">
            <div class="tab-pane fade active show" id="personal-information" role="tabpanel" style="margin-top: 50px;">
                <div class="card">
                    <div class="card-header d-flex justify-content-center align-items-center" style="height: 50px;">
                        <div class="header-title">
                            <h4 class="card-title">Chỉnh sửa trạng thái bài đăng</h4>
                        </div>
                    </div>

                    <div>
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                                @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        @if (TempData["FailMessage"] != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                @TempData["FailMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <form method="post" action="@Url.Action("UpdateRoomStatus", "AccessManagement")">
                            <div class="form-group">
                                <label style="margin-top:30px" for="userTypeName">Tên trạng thái:</label>
                                <input type="text" id="statusName" name="StatusName" class="form-control" value="@Model.StatusName" required />
                                @Html.ValidationMessageFor(model => model.StatusName, "", new { @class = "text-danger" })
                            </div>

                            <input type="hidden" name="RoomStatusId" value="@Model.RoomStatusId" />

                            <div class="form-buttons">
                                <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
                                <a href="@Url.Action("PostStatusManagement", "AccessManagement")" style="margin-right: 20px" class="btn btn-secondary">Hủy bỏ</a>
                            </div>
                        </form>


                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



