﻿
@model FinalProject.ViewModels.Admin.UserManagementVM

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@{
    var successMessage = TempData["SuccessMessage"] as string;
}

<div class="col-lg-12 mt-4 mb-4" style="width: 100%;">
    <div class="iq-edit-list-data">
        <div class="tab-content">
            <div class="tab-pane fade active show" id="personal-information" role="tabpanel">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <div class="header-title" style="text-align: center;">
                            <h4 class="card-title">Sửa người dùng</h4>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @successMessage
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    <div class="card-body">
                        <form asp-action="Edit" method="post" enctype="multipart/form-data">
                           
                            <div class="row align-items-center">
                                <input type="hidden" asp-for="UserId" />
                                <div class="form-group col-sm-6">
                                    <label for="Fullname" class="form-label">Họ và tên:</label>
                                    <input asp-for="Fullname" type="text" class="form-control" id="Fullname" name="Fullname" placeholder="Hãy nhập tên đầy đủ" />
                                    @if (ViewData.ModelState["Fullname"]?.Errors?.Count > 0)
                                    {
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            @Html.ValidationMessageFor(model => model.Fullname, "", new { @class = "text-danger" })
                                        </div>
                                    }
                                </div>

                                <div class="form-group col-sm-6">
                                    <label for="Email" class="form-label">Email: </label>
                                    <input asp-for="Email" type="email" class="form-control" id="Email" name="Email"  placeholder="Hãy nhập email" />
                                    @if (ViewData.ModelState["Email"]?.Errors?.Count > 0)
                                    {
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                                        </div>
                                    }
                                </div>

                                <div class="form-group col-sm-6">
                                    <label for="Phone" class="form-label">Số điện thoại:</label>
                                    <input asp-for="Phone" type="tel" class="form-control" id="Phone" name="Phone" placeholder="Hãy nhập số điện thoại" />
                                    @if (ViewData.ModelState["Phone"]?.Errors?.Count > 0)
                                    {
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                                        </div>
                                    }
                                </div>

                                <div class="form-group col-sm-6">
                                    <label for="Dob" class="form-label">Ngày sinh:</label>
                                    <input asp-for="Dob" type="date" class="form-control" id="Dob" name="Dob"  />
                                    @if (ViewData.ModelState["Dob"]?.Errors?.Count > 0)
                                    {
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            @Html.ValidationMessageFor(model => model.Dob, "", new { @class = "text-danger" })
                                        </div>
                                    }
                                </div>

                                <div class="form-group col-sm-6">
                                    <label for="UserTypeId" class="form-label">Loại người dùng:</label>
                                    <select asp-for="UserTypeId" class="form-control" asp-items="@(new SelectList(ViewBag.UserTypes, "UserTypeId", "TypeName"))" required>
                                        <option value="">Chọn loại người dùng</option>
                                    </select>
                                    @if (ViewData.ModelState["UserTypeId"]?.Errors?.Count > 0)
                                    {
                                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                            @Html.ValidationMessageFor(model => model.UserTypeId, "", new { @class = "text-danger" })
                                        </div>
                                    }
                                </div>

                                <div class="form-group col-sm-6">
                                    <div class="form-check">
                                        <input asp-for="IsValid" class="form-check-input" type="checkbox" />
                                        <label asp-for="IsValid" class="form-check-label">Kích hoạt</label>
                                       
                                    </div>
                                </div>

                            </div>
                            <div class="d-flex justify-content-end mt-3">
                                <button type="submit" class="btn btn-primary me-2">Lưu</button>
                                <button type="button" class="btn btn-secondary" onclick="window.location.href='@Url.Action("Index", "UserManagement")'">Hủy bỏ</button>
                            </div>


                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>